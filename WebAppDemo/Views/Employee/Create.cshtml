@model EmployeeModel


<form asp-controller="Employee" asp-action="Create" method="post">
  <div class="form-group mb-2">
    <label asp-for="FullName">Full Name</label>
    <input asp-for="FullName" class="form-control" required />
  </div>
  <div class="form-group mb-2">
    <label asp-for="Designations">Designation</label>
        <select asp-for="DesignationId" class="form-select" asp-items="@(new SelectList(Model.Designations,"Id","Name"))">
    </select>
  </div>
  <div class="form-group mb-2">
    <label asp-for="DateofJoining">Date of Joining</label>
    <input asp-for="DateofJoining" class="form-control" type="date" required />
  </div>
  <div class="form-group mb-2">
    <label asp-for="MobileNo">Contact Number</label>
    <input asp-for="MobileNo" class="form-control" type="tel" required />
  </div>
  <div class="form-group mb-2">
        <label asp-for="Departments">Departments</label>
        <select asp-for="DepartmentId" class="form-select" asp-items="@(new SelectList(Model.Departments,"Id","Name"))">
        </select>
  </div>
  <div class="form-group mb-2">
    <label asp-for="Location">Location</label>
        <input asp-for="Location" class="form-control" required />
  </div>
  <div class="form-group mb-2">
    <label asp-for="Salary">Salary</label>
    <div class="input-group">
      <div class="input-group-prepend">
        <span class="input-group-text">$</span>
      </div>
      <input asp-for="Salary" class="form-control" step="0.01" required />
    </div>
  </div>
  <button type="submit" class="mt-3 btn btn-primary">Submit</button>
</form>

